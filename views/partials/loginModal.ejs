<link rel="stylesheet" href="/style/style.css" />

<style>
    /* 모달 오버레이 */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.55);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        backdrop-filter: blur(2px);
    }

    /* 모달 박스 */
    .modal {
        position: relative;
        width: 380px;
        background: #fff;
        padding: 46px 32px 32px; /* 상단 패딩을 줘서 닫기 버튼과 여백 확보 */
        border-radius: 16px;
        box-shadow: 0 8px 40px rgba(0,0,0,0.25);
        animation: popup 0.25s ease-out;
    }

    /* 팝업 애니메이션 */
    @keyframes popup {
        from { transform: translateY(10px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }

    /* 닫기 버튼 */
    .close-btn {
        position: absolute;
        top: 16px;     /* 충분한 여백 */
        right: 16px;   /* 충분한 여백 */
        background: none;
        border: none;
        font-size: 28px;
        font-weight: 600;
        color: #666;
        cursor: pointer;
        line-height: 1;
        padding: 4px;
        transition: 0.2s ease;
    }

    .close-btn:hover {
        color: #000;
        transform: scale(1.12);
    }

    /* 입력폼 */
    .modal label {
        display: block;
        margin: 12px 0 6px;
        font-size: 14px;
        font-weight: 600;
        color: #333;
    }

    .modal input {
        width: 100%;
        padding: 10px 12px;
        border-radius: 10px;
        border: 1px solid #ccc;
        background: #fafafa;
        font-size: 14px;
        margin-bottom: 4px;
    }

    .submit-btn {
        width: 100%;
        padding: 12px 0;
        margin-top: 16px;
        border-radius: 10px;
        background: #111;
        color: #fff;
        font-weight: 700;
        border: none;
        cursor: pointer;
        transition: 0.25s ease;
    }

    .submit-btn:hover {
        background: #000;
    }
</style>


<!-- ===================== 모달 HTML ====================== -->

<div class="modal-overlay" id="loginModal" style="display:none">
    <div class="modal">
        <button class="close-btn" id="closeModal" aria-label="닫기">&times;</button>

        <h2 style="margin-bottom: 10px;">로그인이 필요합니다</h2>

        <% if (typeof errorMessage !== "undefined" && errorMessage) { %>
            <p style="margin:6px 0 10px;color:#c62828;"><%= errorMessage %></p>
        <% } else { %>
            <p style="margin:6px 0 14px;color:#444">해당 메뉴는 로그인 후 이용할 수 있어요.</p>
        <% } %>

        <form id="loginForm" action="/login" method="post">
            <input type="hidden" name="next" id="nextPath" value="" />

            <label for="email">이메일</label>
            <input type="email" id="email" name="email" placeholder="you@example.com" required>

            <label for="password">비밀번호</label>
            <input type="password" id="password" name="password" placeholder="비밀번호" required minlength="6">

            <button type="submit" class="submit-btn">로그인</button>
        </form>

        <p style="margin-top:10px;text-align:center;color:#777;font-size:12px;">
            계정이 없으신가요? 
            <a href="/signup" style="color:#999;text-decoration:underline;">회원가입</a>
        </p>
    </div>
</div>
